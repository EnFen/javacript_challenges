<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <!-- add an ingredient -->
  <form action="/" method="post">
    <input type="text" name="ingredient_name">
    <input type="submit">
  </form>

  <h1>
    <%= title %>
  </h1>
  <ul>
    <% for (ingredient of ingredients) { %>
    <li>
      <%= ingredient.name %>
    </li>
    <% } %>
  </ul>

</body>

</html>